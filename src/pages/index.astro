---
import Layout from "../components/layout/Layout.astro";
import {SOCIALS} from "../data/socials-data.tsx";
import SocialCard from "../components/core-ui/social-card/social-card.tsx";
// import "../styles/global.css";
---

<Layout>
    <section class="z-0 min-h-screen h-screen flex md:justify-start md:items-start justify-center items-center relative">
        <img src="/assets/images/personal-picture.jpg" class="absolute top-0 left-0 z-0 object-fit w-full h-full" />
        <div class="p-20 mt-5 md:mt-0 z-10">
            <p class="text-3xl md:text-[50px] font-bold">
                Hi, I'm <span class="text-indigo-700">Porya</span> a full-stack developer.<br/>
                I can help you build your next web application.
            </p>
        </div>
    </section>
    <section class="bg-indigo-900 text-white flex justify-center items-center flex-wrap pb-40 relative">
        <div class="w-full flex justify-center items-center flex-wrap">
            {SOCIALS.map(social => (
                <div class="flex justify-center items-center content-center w-full sm:w-1/2 md:w-1/4">
                    <SocialCard social={social} />
                </div>
            ))}
        </div>
        <div class="absolute -bottom-12 w-full flex justify-center items-center">
            <div class="w-full flex justify-center items-center flex-wrap max-w-xl m-auto rounded-md bg-indigo-700">
                <h3 class="w-full text-2xl flex justify-center items-start px-2 py-4 text-center">
                    want to work together and create amazing products with me?
                </h3>
                <div class="w-full p-4 inline-block text-center whitespace-nowrap justify-center items-center">
                    <div class="w-full p-1 h-10 rounded-full flex justify-center items-center bg-black bg-opacity-10">
                        <input placeholder="Quote ..." type="text" class="bg-transparent border-none outline-none w-full h-full p-1" />
                        <button class="bg-indigo-500 rounded-full py-2 px-3 h-full flex-1 inline-flex justify-center items-center">
                            Get a quote
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="flex justify-center items-center min-h-screen h-screen pt-28 bg-[url('/assets/images/PolygonLuminary.svg')] bg-cover">
        <div class="w-full flex justify-center items-center flex-wrap px-12 font-sans">
            <div class="w-full">
                <h2 class="text-3xl font-extrabold mb-3">
                    About me ?
                </h2>
            </div>
            <div class="w-full flex justify-start items-center">
                <p class="max-w-md text-lg selection:bg-indigo-700 selection:text-white">
                    I'm a full-stack developer, I have a passion for building web applications.
                    I'm currently working as a front-end developer at <a href="https://www.truelayer.com/" target="_blank" rel="noopener noreferrer">TrueLayer</a>.
                    I'm also a student at <a href="https://www.ecole42.com/" target="_blank" rel="noopener noreferrer">Ecole 42</a> in Paris.
                    Everyday I'm learning new things and I'm always looking for new challenges.
                    when I'm not coding, I'm usually playing video games, watching movies or listening to music.
                    but I'm also a big fan of <a href="https://www.youtube.com/channel/UC-lHJZR3Gqxm24_Vd_AJ5Yw" target="_blank" rel="noopener noreferrer">music</a> and <a href="https://www.youtube.com/channel/UC-lHJZR3Gqxm24_Vd_AJ5Yw" target="_blank" rel="noopener noreferrer">video games</a>.
                </p>
            </div>
        </div>
    </section>
</Layout>